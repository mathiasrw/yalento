{
  "name": "yalento",
  "version": "0.0.50",
  "description": "An awesome integration of Google Firebase for Angular and Node",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "npm run build && nyc --reporter=lcov --reporter=text-summary node_modules/.bin/mocha --opts ./mocha.opts src",
    "test:ng8": "npm run build && cp -R lib test/ng8/node_modules/yalento/lib && cd test/ng8 && npm run test-headless"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/"
  },
  "keywords": [
    "firebase",
    "angular",
    "node.js",
    "alasql",
    "sequelizer",
    "typeorm",
    "state"
  ],
  "author": "C-J",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/miegli/yalento/issues"
  },
  "homepage": "https://github.com/miegli/yalento/blob/master/README.md",
  "dependencies": {
    "@firebase/firestore-types": "^1.6.2",
    "@types/bluebird": "^3.5.27",
    "@types/validator": "^10.11.3",
    "alasql": "^0.5.1",
    "class-transformer": "^0.2.3",
    "es6-shim": "^0.35.5",
    "firebase": "^7.2.1",
    "firebase-admin": "^8.7.0",
    "firebase-functions": "^3.3.0",
    "firesql": "^2.0.2",
    "firestore": "^1.1.6",
    "guid-typescript": "^1.0.9",
    "ngeohash": "^0.6.3",
    "reflect-metadata": "^0.1.13",
    "rxfire": "^3.8.6",
    "rxjs": "^6.5.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.14.21",
    "assert": "^1.4.1",
    "chai": "^4.2.0",
    "mocha": "^6.2.1",
    "mochawesome": "^4.1.0",
    "nyc": "^15.0.0-beta.0",
    "prettier": "^1.18.2",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3",
    "dotenv": "^8.2.0"
  },
  "files": [
    "lib/**/*"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ]
}
